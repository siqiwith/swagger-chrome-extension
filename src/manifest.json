{
  "name": "Swagger viewer",
  "version": "1.0",
  "description": "Swagger yaml file navigator",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "32": "images/icon.png"
    }
  },
  "options_page": "options/index.html",
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "http://*/",
    "https://*/"
  ]
}